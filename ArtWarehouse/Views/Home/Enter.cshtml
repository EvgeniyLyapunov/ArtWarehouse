@model ArtWarehouse.Models.UserEnter_Model
@{
    ViewData["Title"] = "Вход";
}
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/enter/enter.css" />
</head>

<div class="enter-content">
    <div class="card w-50">
        <div class="card-header text-right bg-info">
            <img class="card-enter-logo" src="~/images/logo/logo.png" />
            <h5 >Вход в систему АртСклад</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title mb-5">Введите имя пользователя и пароль</h5>
            <form class="enter-form" asp-controller="Home" asp-action="EnterSystem">
                <div class="form-group">
                    <label for="exampleInputEmail1">Имя пользователя</label>
                    <input type="text" class="form-control" id="nickname" name="Nickname">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Пароль</label>
                    <input type="password" class="form-control" id="password" name="Password">
                </div>
                <button type="submit" class="enter-btn ml-auto mt-5 btn w-25 btn-outline-info">Войти</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const enterForm = document.querySelector('.enter-form');
        const enterBtn = document.querySelector('.enter-btn');
        const nickname = document.getElementById('nickname');
        const pass = document.getElementById('password');

        nickname.value = '';
        pass.value = '';

        enterBtn.addEventListener('click', (e) => {
            e.preventDefault();
            if (nickname.value == '' || pass.value == '') return;

            enterForm.submit();
        })


    </script>
}




